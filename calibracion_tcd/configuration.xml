<?xml version="1.0" encoding="utf-8"?>
<opencv_storage>

  <!-- Path to the output_images folder
          - by default images will be searched in the application folder,
            inside a folder named output_images that follows this scheme:
            -> output_images
                      |-> color
                      |     |-> c_20196141560502490749.png
                      |     |-> ...
                      |-> thermo
                      |     |-> t_20196141560502490749.png
                      |     |-> ...                       
            set the images path surrounded by "". For example: "C:\dir\thermo" -->
  <PathThermoImages>"C:\Users\aljuasin\Desktop\captura_tcd\imagenes\output_imagesx640_80\thermo"</PathThermoImages>
  <PathColorImages>"C:\Users\aljuasin\Desktop\captura_tcd\imagenes\output_imagesx640_80\color"</PathColorImages>
  <!-- Name of the output log file. -->
  <OutputName>"C:\Users\aljuasin\Desktop\captura_tcd\imagenes\output_imagesx640_80\out_camera_intrinsics_640_80.xml"</OutputName>

  <!-- Color and depth image resolution mode and frames per second 
        - IntelResolution_mode 0 = 1280x720 (default)
        - IntelResolution_mode 1 = 640x480
        - IntelResolution_mode 2 = 848x480 
        - Recomended IntelFPS = 30, 15 or 6 ( If app crashes with a defined IntelResolution_mode try other IntelFPS configuration) -->
  <IntelResolution_mode>1</IntelResolution_mode>
  <IntelFPS>30</IntelFPS>

  <!-- Flip images
        - 0 no flip (Default)
        - 1 flip-->
  <FlipMode>0</FlipMode>
  <!-- Modes of the calibration pattern
        - 0 if the calibration pattern is hot and the background is cold (default)
        - 1 if the calibration pattern is cold and the backtround is hot  -->
  <PatternTemp>0</PatternTemp>
  <!-- Color of the calibration pattern
        - 0 Black board with white circles (default)
        - 1 White board with black circles -->
  <PatternColor>0</PatternColor>

  <!-- Number of inner corners per a item row and column. (square, circle) -->
  <BoardSize_Width>9</BoardSize_Width>
  <BoardSize_Height>3</BoardSize_Height>
  <!-- Speciry the diameter of the circles (mm) -->
  <CircleSize>20.0</CircleSize>
  
  <!-- Show undistorted images after calibration 
        - 0 do not show. (default)
        - different to 0 to show undistorted images. -->
  <ShowUndistort>0</ShowUndistort>

</opencv_storage>